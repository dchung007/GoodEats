doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='stylesheet' href='/stylesheets/reset.css')
    link(rel='stylesheet' href='/stylesheets/index.css')
    link(rel='stylesheet' href='/stylesheets/layout.css')
    title GoodEats - #{title}
  body
    div(class='navbar-container')
        div(class='logo')
          a(class='navbar-brand' href='/') GoodEats
        div(class='navbar-contents')
          ul(class='account-links')
          unless locals.authenticated
              a(href='/users/sign-in') Sign in
              a(href='/users/register') Register
          if locals.authenticated
            span(class='navbar-text px-4') Welcome #{user.username}!
            form(class='form-inline pr-4' action='/users/sign-out' method='post')
              button(class='btn btn-sm btn-warning' type='submit') Sign Out
          div(id='home-nav')
            a(href='/') Home
          div(id='restaurants-nav')
            a(href='/restaurants') Restaurants
    .container
      block content
