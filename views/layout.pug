doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='stylesheet' href='/stylesheets/reset.css')
    link(rel='stylesheet' href='/stylesheets/index.css')
    link(rel='stylesheet' href='/stylesheets/layout.css')
    link(rel='stylesheet' href='/stylesheets/reviews.css')
    title GoodEats - #{title}
  body
    div(class='navbar-container')
        div(class='logo')
          a(href="/")
            img(href="/" src="https://i.imgur.com/1QkBXU5.png", alt="Logo", style="height:50px", id="logo")
        div(class='navbar-contents')
          ul(class='account-links')
          unless locals.authenticated
              a(href='/users/sign-in' class="menu-bar") Sign in
              a(href='/users/register' class="menu-bar") Register
              form(action="/users/demo-user" method="post" id="demo-user-form")
                button(type="submit" class="demo-user-btn") Demo User
          if locals.authenticated
            span(class='navbar-text px-4') Welcome #{user.username}!
            form(class='form-inline pr-4' action='/users/sign-out' method='post')
              button(class="demo-user-btn" type='submit') Sign Out
          div(id='home-nav')
            a(class = "menu-bar" href='/') Home
          div(id='restaurants-nav')
            a(class = "menu-bar" href='/restaurants') Restaurants
    .container
      block content
