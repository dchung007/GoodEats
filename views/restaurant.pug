extends layout.pug

block content
  link(rel='stylesheet' href='/stylesheets/restaurant.css')

  h1(class='restaurant-header')= restaurant.name

  div(class="restaurant-div")
    each item in restaurant.MenuItems
      h2.itemName= item.name
      img(src=`${item.image}`, alt="image" style="width:250px")
      p.itemDescription= item.description
    div(class="reviews-div") Reviews
      each review in restaurant.Reviews
        p.reviewName= review.review



  p(class="restaurant-p"): a(href=`/restaurants/`) Restaurants
  p(class="restaurant-header"): a(href=`/restaurants/${restaurantId}/menu-items`) See More Menu Items
  p(class="restaurant-header"): a(href=`/restaurants/${restaurant.id}/reviews`) View All Reviews
