extends layout.pug

block content
  h1= restaurant.name
  h2 Reviews
  div
    each review in restaurant.Reviews
      p.reviewName= review.review
        if (review.userId === currentUser)
          a(class='delete-button' id=`delete-post-${review.id}` href=`/restaurants/${review.restaurantId}/reviews/delete/${review.id}`)   Delete
          a(class='edit-button' id=`edit-post-${review.id}` href=`/restaurants/${review.restaurantId}/reviews/edit/${review.id}`)   Edit
  p: a(href=`/restaurants/${restaurant.id}/reviews`)= restaurant.name
  p: a(href=`/restaurants/${restaurant.id}/reviews/new`) Write a review
