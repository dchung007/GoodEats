extends layout.pug

block content
  h1= restaurant.name
  h2 Reviews
  div
    each review in restaurant.Reviews
      p.reviewName= review.review
        button(class='delete-button' id=`delete-post-${reviewId}`) Delete

  p: a(href=`/restaurants/${restaurant.id}}`)= restaurant.name
  p: a(href=`/restaurants/${restaurant.id}/reviews/new`) Write a review
